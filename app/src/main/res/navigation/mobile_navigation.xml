<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.freetime.kpdhj.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_character"
        android:name="com.freetime.kpdhj.ui.characters.CharactersFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_characters" />

    <fragment
        android:id="@+id/navigation_music"
        android:name="com.freetime.kpdhj.ui.music.MusicFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_music" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.freetime.kpdhj.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />
</navigation>